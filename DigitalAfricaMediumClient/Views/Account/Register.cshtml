@model DigitalAfricaMediumClient.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

 <!-- SIGN UP SECTION -->
<section class="text-white">
    <div class="cover-4"></div>
    <!-- .container -->
    <div class="container">
        <!-- .row -->
        <div class="row">
            <!-- .col-md-12 -->
            <div class="col-md-12">
                <!-- .row -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-8 col-lg-offset-8 mar-bottom-md">
                        <h1 class="text-uppercase text-primary wow fadeInDown text-center" data-wow-duration=".8s" data-wow-delay=".2s">Take a tour</h1>
                        <p class="text-center">
                            <i class="text-muted text-capitalize">The best designs for you.</i>
                        </p>
                        <div class="text-center">
                            <span class="separator">
                                <i class="icon icon-small iline2-lock22 text-primary no-margin"></i>
                            </span>
                        </div>
                        <p class="wow fadeInUp text-center" data-wow-duration="1s" data-wow-delay=".3s">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                            sed do eiusmod tempor incididunt ut labore.
                        </p>
                        <form action="/" method="post" class="mar-top-lg error wow fadeInUp" data-wow-duration="1s" data-wow-delay=".6s" novalidate="" name="signupForm">
                            <!-- .form-group -->
                            <div class="form-group control-group">
                                <input id="firstname" type="text" class="input-lg" name="firstname" placeholder="First Name* :" required="" data-validation-required-message="Please enter your first name." />
                                <p class="help-block"></p>
                            </div>
                            <!-- .form-group -->
                            <div class="form-group control-group">
                                <input id="lastname" type="text" class="input-lg" value="" name="lastname" placeholder="Last Name* :" required="" data-validation-required-message="Please enter your last name." />
                                <p class="help-block"></p>
                            </div>
                            <!-- .form-group -->
                            <div class="form-group control-group">
                                <input id="phone-number" type="text" class="input-lg" value="" name="phone-number" placeholder="Phone Number :" />
                                <p class="help-block"></p>
                            </div>
                            <!-- .form-group -->
                            <div class="form-group control-group">
                                <input id="email" class="half left input-lg" type="email" value="" name="email" placeholder="E-mail* :" required="" data-validation-required-message="Please enter your email address." />
                                <input id="password" class="half right input-lg" type="text" value="" name="password" placeholder="Password* :" required="" data-validation-required-message="Please enter a password." />
                                <span class="clearboth"></span>
                                <p class="help-block"></p>
                            </div>
                            <div class="checkbox control-group">
                                <label>
                                    <input type="checkbox" name="termofcondition" id="termofcondition" /> I agree to the terms and conditions.
                                </label>
                                <p class="mar-top-lg text-white text-center">
                                    By clicking Sign Up, you agree to our Terms and that you
                                    have read our Data Policy, including our Cookie Use.
                                </p>
                            </div>
                            <button type="submit" class="btn btn-success btn-full btn-lg">Sign Up</button>
                        </form>
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
</section>
<!-- SIGN UP SECTION END -->

